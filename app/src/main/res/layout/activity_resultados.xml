<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.javi_.practicaandroid.ResultadosActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:showDividers="beginning|middle"
        android:id="@+id/tableLayout">

        <TableRow
            android:id="@+id/cabecera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:divider="#b23d3d"
            android:contextClickable="false"
            android:baselineAligned="false"
            android:background="#e0d3d3">

            <TextView
                android:id="@+id/aciertos"
                android:textSize="@dimen/size2"
                android:text="Aciertos"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center" />

            <TextView
                android:id="@+id/fallos"
                android:text="Fallos"
                android:textSize="@dimen/size2"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center" />
            <TextView
                android:id="@+id/porcentaje"
                android:text="%"
                android:layout_weight="1"
                android:textSize="@dimen/size2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center" />
        </TableRow>


    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:id="@+id/volver"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

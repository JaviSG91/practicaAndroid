<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    style="@style/Background_">
    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="@dimen/anchoimagen"
        android:layout_height="@dimen/alturaimagen"
        android:src="@drawable/arenusca"
        android:layout_gravity="center"/>
    <TextView
        style="@style/Texto_introductorio"
        android:text="@string/welcome1"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:textColor="#003366"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center|center_vertical" />
    <TextView
        android:text="@string/welcome2"
        android:id="@+id/go"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/size2"
        android:textColor="#003366"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
    <Button
        style="@style/Botones_menu"
        android:text="Jugar"
        android:id="@+id/btn_jugar"
        android:background="#bada55"
        android:textSize="@dimen/size2"
        android:layout_marginTop="10dp"
        android:layout_height="@dimen/alturaboton"
        android:layout_gravity="center"
        android:layout_width="@dimen/anchoboton" />
    <Button
        style="@style/Botones_menu"
        android:text="Resultados"
        android:textSize="@dimen/size2"
        android:id="@+id/btn_resultados"
        android:background="#7aaee6"
        android:width="30dp"
        android:layout_gravity="center"
        android:layout_width="@dimen/anchoboton"
        android:layout_height="@dimen/alturaboton"
        android:layout_marginTop="10dp" />
    <Button
        style="@style/Botones_menu"
        android:text="Otros juegos"
        android:id="@+id/btn_ajustes"
        android:background="#ff88ae"
        android:padding="0dp"
        android:textSize="@dimen/size2"
        android:layout_gravity="center"
        android:layout_width="@dimen/anchoboton"
        android:layout_height="@dimen/alturaboton"
        android:layout_marginTop="10dp" />
   </LinearLayout>
</LinearLayout>